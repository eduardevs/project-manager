{% extends 'pages/dashboard.html.twig' %}

{% block content %}

<div class="container-fluid">
    <div class="container">
        <div class="d-flex justify-content-center mt-5">
            {% if car %}
            <ul>
                <li><strong>Model's name :</strong> {{car.name}}</li>
                <li><strong>Price :</strong> {{ car.cost }}</li>
                <li><strong>Seats :</strong> {{ car.nbSeats }}</li>
                <li><strong>Doors :</strong> {{ car.nbDoors }}</li>
                <li><strong>Category :</strong>
                    {% if car.category == true %}
                        {{car.category}}
                    {% else %}
                        <p>None</p>
                    {% endif %}
                </li>
            </ul>
            {% else %}
                <span>Car not found</span>
            {% endif %}
            </div>
        <a href="{{path('app_admin')}}" class="btn btn-secondary">Return</a>

    </div>
</div>
{% endblock %}
